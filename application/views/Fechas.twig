<html lang="es">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Fechas</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
    {% block head %}{% endblock %}
  </head>
    <body>
        <div class="container">
            <header>
            <h2>Cálculo de fechas</h2>
            </header>
            <section>
                <h3>Instrucciones</h3>
                <span>instrucciones de formulario</span>
            </section>
            <section>
               {{form_open('fechas/form_process', 'id="form-template"')}}
                    <div class="form-group form-inline">
                        <div class="col-lg-3 col-md-3 col-sm-8 col-xs-12">
                            <label class="control-label">Fecha</label>
                            <input type="date" class="dates" name="date-1" required></input>
                        </div>
                        <div class="col-lg-8 col-md-8 col-sm-10 col-xs-12">
                            <label class="control-label">Número de días</label>
                            <input type="number" class="numbers" name="number-1" required></input>
                        </div>
                   </div>
                   <div class="form-group form-inline">
                        <div class="col-lg-3 col-md-5 col-sm-8 col-xs-12">
                            <label class="control-label">Fecha</label>
                            <input type="date" class="dates" name="date-2" required></input>
                        </div>
                        <div class="col-lg-8 col-md-8 col-sm-10 col-xs-12">
                            <label class="control-label">Número de días</label>
                            <input type="number" class="numbers" name="number-2" required></input>
                        </div>
                   </div>
                   <div class="form-group form-inline">
                        <div class="col-lg-3 col-md-5 col-sm-8 col-xs-12">
                            <label class="control-label">Fecha</label>
                            <input type="date" class="dates" name="date-3" required></input>
                        </div>
                        <div class="col-lg-8 col-md-8 col-sm-10 col-xs-12">
                            <label class="control-label">Número de días</label>
                            <input type="number" class="numbers" name="number-3" required></input>
                        </div>
                   </div>
                   <div class="form-group form-inline">
                        <div class="col-lg-3 col-md-5 col-sm-8 col-xs-12">
                            <label class="control-label">Fecha</label>
                            <input type="date" class="dates" name="date-4" required></input>
                        </div>
                        <div class="col-lg-8 col-md-8 col-sm-10 col-xs-12">
                            <label class="control-label">Número de días</label>
                            <input type="number" class="numbers" name="number-4" required></input>
                        </div>
                   </div>
                   <div class="col-lg-8 col-md-8 col-sm-10 col-xs-12">
                    <button class="btn btn-default" type="submit" id="submit">Enviar</button>
                   </div>
               {{form_close}}
            </section>
            <section>
                <div class="result" style="display: none">
                    <h3>Resultado</h3>
                    <span></span>
                </div>
            </section>
       </div>
    </body>
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-2.2.4.min.js" integrity="sha256-BbhdlvQf/xTY9gja0Dq3HiwQF8LaCRTXxZKRutelT44=" crossorigin="anonymous"></script>

    <!-- Bootstrap -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
     <script src="/assets/js/custom.js"></script>
    <!-- script content -->
	{% block script %}
    {% endblock %}
    <!-- /script content -->
    {% block footer %}
    <!-- footer content -->
    {% endblock %}
     <!-- /footer content -->
  </body>
</html>
